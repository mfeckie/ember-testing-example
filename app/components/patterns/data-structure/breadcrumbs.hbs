{{#if (has-block)}}
  {{yield}}
{{else}}
  {{#each @breadCrumbItems as | bci |}}
    {{#if bci.divider}}
      <Patterns::DataStructure::Breadcrumbs::Divider />
    {{else}}
      <Patterns::DataStructure::Breadcrumbs::Link @href={{bci.href}}>
        {{bci.text}}
      </Patterns::DataStructure::Breadcrumbs::Link>
    {{/if}}
  {{/each}}
{{/if}}